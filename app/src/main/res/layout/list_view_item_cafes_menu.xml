<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <ImageView
                android:id="@+id/product_image"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:src="@drawable/tavuk_doner"
                android:layout_alignBottom="@id/product_price"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true">

            </ImageView>
            <TextView
                android:id="@+id/product_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tavuk Döner"
                android:padding="10dp"
                android:fontFamily="sans-serif-condensed"
                android:textSize="20sp"
                android:layout_toLeftOf="@id/product_image"
                android:gravity="center">
            </TextView>
            <TextView
                android:id="@+id/product_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="180 gr. tavuk döner. Salata, sos, mayonez, turşu ile"
                android:padding="10dp"
                android:layout_below="@id/product_header"
                android:layout_toLeftOf="@+id/product_image">
            </TextView>
            <TextView
                android:id="@+id/product_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/product_info"
                android:padding="10dp"
                android:layout_toLeftOf="@+id/product_image"
                android:text="17,00 TL">
            </TextView>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>